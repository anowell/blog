<!DOCTYPE html>
<html>
  <head>
    {% if page.collection == "posts" %}
      <title>{{ page.title }}</title>
    {% else %}
      <title>Anthony Nowell</title>
    {% endif %}
    <meta name="author" content="Anthony Nowell">
    <meta name="description" content="{{ page.description }}">
    {% if page.collection == "posts" %}
      <meta property="og:type" content="article" />
      <meta property="og:url" content="{{ site.base_url }}/{{ page.permalink }}">
      <meta property="og:type" content="website">
      <meta property="og:title" content="{{ page.title }}" />
      <meta property="og:image" content="{{ site.base_url }}{{ page.data.image_path }}" />
      <meta name="twitter:card" content="summary" />
      <meta name="twitter:site" content="@atnowell" />
      <meta name="twitter:title" content="{{ page.title }}" />
      <meta name="twitter:description" content="{{ page.description }}" />
      <meta name="twitter:image" content="{{ site.base_url }}{{ page.data.image_path }}" />
    {% endif %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto+Slab|Source+Code+Pro" rel="stylesheet">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.9.0/styles/railscasts.min.css">
  </head>
  <body>
    {% if page.collection == "posts" %}
      <div style="position: relative;">
        <div class="cover" style="background-image: url({{ page.data.cover_path }}); background-position: center;"></div>
        <div class="top-nav">
          <a href="/"><i class="fa fa-chevron-circle-left"></i></a>
        </div>
      </div>
    {% endif %}
    <div>
      {% if page.collection == "posts" %}
        {% include 'post.liquid' %}
      {% else %}
        {{ page.content }}
      {% endif %}
    </div>
    <script src="/js/main.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.9.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-89616131-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
